{
  "name": "test-project",
  "version": "0.0.1",
  "description": "Test task",
  "author": "Orest Mirko",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js --config src/core/database/ormconfig.ts",
    "migration:gen": "yarn typeorm migration:generate",
    "migration:run": "yarn typeorm migration:run",
    "migration:revert": "yarn typeorm migration:revert",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:down:volumes": "docker-compose down -v"
  },
  "dependencies": {
    "@nestjs/common": "7.6.12",
    "@nestjs/core": "7.6.12",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "7.6.12",
    "@nestjs/platform-fastify": "7.6.12",
    "@nestjs/schedule": "^2.1.0",
    "@nestjs/swagger": "4.7.13",
    "@nestjs/typeorm": "7.1.5",
    "class-transformer": "0.3.2",
    "class-validator": "0.13.1",
    "dotenv": "^16.4.7",
    "fastify-swagger": "4.3.1",
    "moment": "^2.29.4",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "8.5.1",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "6.6.3",
    "typeorm": "0.2.31",
    "yarn": "^1.22.19"
  },
  "devDependencies": {
    "@nestjs/cli": "7.5.4",
    "@nestjs/schematics": "7.2.7",
    "@nestjs/testing": "7.6.12",
    "@types/bcrypt": "^5.0.2",
    "@types/cron": "^2.0.0",
    "@types/express": "4.17.11",
    "@types/ioredis": "^5.0.0",
    "@types/jest": "26.0.20",
    "@types/node": "14.14.25",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "2.0.10",
    "@typescript-eslint/eslint-plugin": "4.15.0",
    "@typescript-eslint/parser": "4.15.0",
    "eslint": "7.19.0",
    "eslint-config-prettier": "7.2.0",
    "eslint-plugin-prettier": "3.3.1",
    "jest": "26.6.3",
    "prettier": "2.2.1",
    "supertest": "6.1.3",
    "ts-jest": "26.5.1",
    "ts-loader": "8.0.17",
    "ts-node": "9.1.1",
    "tsconfig-paths": "3.9.0",
    "typescript": "4.1.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleDirectories": [
      "src",
      "node_modules",
      "dist"
    ],
    "moduleNameMapper": {
      "@config": [
        "configs/env.config"
      ],
      "@core": [
        "core/index"
      ],
      "@guards": [
        "core/guards/index"
      ],
      "@entities": [
        "core/database/entities/index"
      ],
      "@repositories": [
        "core/database/repositories/index"
      ],
      "@utils": [
        "utils/index"
      ],
      "@dtos": [
        "dtos/index"
      ],
      "@interfaces": [
        "interfaces/index"
      ],
      "@enums": [
        "enums/index"
      ],
      "@constants": [
        "constants/index"
      ],
      "@modules": [
        "components/module.index"
      ],
      "@controllers": [
        "components/controller.index"
      ],
      "@providers": [
        "components/service.index"
      ]
    }
  }
}
